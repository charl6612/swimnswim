<%= render 'shared/navbar' %>
<%= render 'shared/flashes' %>
<div class="container">
  <div class="pictures-display">
    <div class="picture-pool">
      <%= cl_image_tag @pool.picture%>
    </div>
     <div class="picture-pool">
      <%= cl_image_tag @pool.picture1 %>
    </div>
    <div class="picture-pool">
      <%= cl_image_tag @pool.picture2 %>
