  <div class="container" >
   <form>
    <%= simple_form_for [@pool] do |f| %>
      <%= f.error_notification %>
      <%= f.input :address, class:"form-control", id:"name", placeholder:"Address" %>
      <%= f.input :description, class:"form-control", id:"name", placeholder:"Write a short description" %>
      <%= f.input :price_per_day, class:"form-control", placeholder:"Your price per day in â‚¬" %>
      <%= f.input :capacity, class:"form-control", placeholder:"Max capacity of the pool"%>
      <%= f.input :picture, as: :file %>
      <%= f.input :picture_cache, as: :hidden %> 
      <% if @pool.id.nil? %>
          <%= f.submit "add a pool", class: "btn btn-primary" %>
      <% else %>
        <%= f.submit "update pool", class: "btn btn-primary" %>
        <% end %>
      <%= link_to "Back to list", pools_path, class: "btn btn-secondary" %>
    <% end %>
  </form>
</div>