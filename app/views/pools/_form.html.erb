  <div class="container" >
  <%= simple_form_for [pool] do |f| %>
    <%= f.error_notification %>
    <%= f.input :name, class:"form-control", id:"name", placeholder:"Nom" %>
    <%= f.input :address, class:"form-control", id:"name", placeholder:"Adresse" %>
    <%= f.input :description, class:"form-control", id:"name", placeholder:"Petite description" %>
    <%= f.input :price_per_day, class:"form-control", placeholder:"Le prix par jour en â‚¬" %>
    <%= f.input :capacity, class:"form-control", placeholder:"Nombre de personnes max"%>
    <%= f.input :picture, as: :file %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.input :picture1, as: :file %>
    <%= f.input :picture1_cache, as: :hidden %>
    <%= f.input :picture2, as: :file %>
    <%= f.input :picture2_cache, as: :hidden %>

    <% if pool.id.nil? %>
        <%= f.submit "Ajouter une piscine", class: "btn btn-primary" %>
    <% else %>
      <%= f.submit "Modifier la piscine", class: "btn btn-primary" %>
      <% end %>
    <%= link_to "Retour liste", pools_path, class: "btn btn-secondary" %>
  <% end %>
</div>
