<%= simple_form_for [@pool] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :capacity %>
  <%= f.input :picture %>
  <%= f.submit "add a pool", class: "btn btn-primary" %>
  <%= link_to "Back to list", pools_path, class: "btn btn-secondary" %>
<% end %>